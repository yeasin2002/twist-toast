{
  "name": "@twist-toast/react",
  "type": "module",
  "version": "0.1.0",
  "description": "React adapter for twist-toast",
  "author": "Md Kawsar Islam Yeasin <mdkawsarislam2002@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/yeasin2002/twist-toast#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yeasin2002/twist-toast.git"
  },
  "bugs": {
    "url": "https://github.com/yeasin2002/twist-toast/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "play": "vite",
    "test": "vitest",
    "typecheck": "pnpm run check-types",
    "check-types": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@twist-toast/typescript-config": "workspace:*",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser-playwright": "^4.0.16",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "^4.0.16",
    "vitest-browser-react": "^2.0.2"
  }
}
